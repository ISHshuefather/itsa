#include <iostream>
#include <iomanip>
using namespace std;
int main()
{
    int time;
    cin >> time;
    double money;
    money=time*0.9;
    if(time>800&&time<1500){
        money=money*0.9;
        
        
    }
    if(time>=1500){
        money=money*0.79;
        
        
        
    }
    cout << fixed << setprecision(1) << money << endl;
    return 0;
}
